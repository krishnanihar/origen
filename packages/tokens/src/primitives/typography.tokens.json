{
  "fontFamily": {
    "$type": "fontFamily",
    "sans": { "$value": ["Inter", "system-ui", "sans-serif"] },
    "mono": { "$value": ["JetBrains Mono", "monospace"] }
  },
  "fontSize": {
    "$type": "dimension",
    "xs": { "$value": "12px" },
    "sm": { "$value": "14px" },
    "base": { "$value": "16px" },
    "lg": { "$value": "18px" },
    "xl": { "$value": "20px" },
    "2xl": { "$value": "24px" },
    "3xl": { "$value": "30px" }
  },
  "fontWeight": {
    "$type": "fontWeight",
    "normal": { "$value": 400 },
    "medium": { "$value": 500 },
    "semibold": { "$value": 600 },
    "bold": { "$value": 700 }
  },
  "lineHeight": {
    "$type": "number",
    "tight": { "$value": 1.25 },
    "normal": { "$value": 1.5 },
    "relaxed": { "$value": 1.75 }
  },
  "radius": {
    "$type": "dimension",
    "none": { "$value": "0px" },
    "sm": { "$value": "4px" },
    "md": { "$value": "6px" },
    "lg": { "$value": "8px" },
    "xl": { "$value": "12px" },
    "full": { "$value": "9999px" }
  }
}
